@using EntityLayer.Concreate
@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateSkill", "Skill", FormMethod.Post))
{
    <div class="col-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Teknik Bilgi</h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.SkillID)
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        <text style="color:gray">@Html.ValidationMessage("Title")</text>
                    </div>
                    <div class="form-group">
                        <label>Oran</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control", @type = "number" })
                        <text style="color:gray">@Html.ValidationMessage("Value")</text>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Kaydet</button>
                    <button class="btn btn-dark">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
}