
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
{
    <div class="col-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Teknik Bilgi</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" placeholder="Başlık" name="Title">
                        <text style="color:gray">@Html.ValidationMessage("Title")</text>
                    </div>

                    <div class="form-group">
                        <label>Oran</label>
                        <input type="number" name="Value" max="100" min="0" class="form-control" placeholder="Oran % " required>
                        <text style="color:gray">@Html.ValidationMessage("Value")</text>
                    </div>

                    <button type="submit" class="btn btn-outline-info">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}
