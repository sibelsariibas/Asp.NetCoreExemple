
@{
    ViewData["Title"] = "AddSExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    <div class="col-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyim</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" placeholder="Başlık" name="Name">
                        <text style="color:gray">@Html.ValidationMessage("Name")</text>
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="date" class="form-control" placeholder="Tarih" name="Date">
                        <text style="color:gray">@Html.ValidationMessage("Date")</text>
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        <input type"text" class="form-control" placeholder="Görsel URL" name="ImageUrl">
                        <text style="color:gray">@Html.ValidationMessage("ImageUrl")</text>
                    </div>
                    <div class="form-group">
                        <label>Görev Tanımı</label>
                        <textarea class="form-control" name="Description" rows="6"></textarea>
                        <text style="color:gray">@Html.ValidationMessage("Description")</text>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}
