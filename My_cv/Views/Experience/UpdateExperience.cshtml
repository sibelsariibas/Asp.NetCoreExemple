@using EntityLayer.Concreate
@model Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateExperience", "Experience", FormMethod.Post))
{
    <div class="col-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyim</h4>
                <form class="forms-sample">

                    @Html.HiddenFor(x=>x.ExperienceID)
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        <text style="color:gray">@Html.ValidationMessage("Name")</text>
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                        <text style="color:gray">@Html.ValidationMessage("Date")</text>
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        <text style="color:gray">@Html.ValidationMessage("ImageUrl")</text>
                    </div>
                    <div class="form-group">
                        <label>Görev Tanımı</label>
                        @Html.TextAreaFor(x => x.Description, 6, 3, new { @class = "form-control" })
                        <text style="color:gray">@Html.ValidationMessage("Description")</text>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
}
