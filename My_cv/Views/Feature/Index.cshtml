@using EntityLayer.Concreate
@model Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form class="form-group" method="post">
    <div class="col-xl-8 order-xl-1">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Giriş Bilgileri</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="submit" class="btn btn-sm btn-primary">Güncelle</button>
                    </div>
                </div>
            </div>

            <input name="FeatureID" value="@Model.FeatureID" type="hidden" />
            <div class="card-body">
                <h6 class="heading-small text-muted mb-2">Giriş Bilgileri</h6>
                <div class="pl-lg-2">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Header">Başlık</label>
                                <input type="text" name="Header" maxlength="200" class="form-control" placeholder="Başlık" required value="@Model.Header">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Name">İsim Soyisim</label>
                                <input type="text" name="Name" maxlength="200" class="form-control" placeholder="İsim" required value="@Model.Name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Title">Ünvan</label>
                               <input type="text" name="Title" maxlength="700" class="form-control" placeholder="Ünvan" required value="@Model.Title" >
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
