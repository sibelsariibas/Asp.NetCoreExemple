@using EntityLayer.Concreate
@model Testimonial

@{
    ViewData["Title"] = "UpdateTestimanial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post">
    <div class="col-xl-8 order-xl-1">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Referans Bilgileri</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>

            <input name="TestimonialID" value="@Model.TestimonialID" type="hidden" />
            <div class="card-body">
                <h6 class="heading-small text-muted mb-2">Referans Bilgileri</h6>
                <div class="pl-lg-2">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Title">Ad Soyad</label>
                                <input type="text" name="ClientName" maxlength="200" class="form-control" placeholder="Referans Ad Soyad" required value="@Model.ClientName">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Title">Firma Bilgisi</label>
                                <input type="text" name="Company" maxlength="200" class="form-control" placeholder="Firma Bilgisi" required value="@Model.Company">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
