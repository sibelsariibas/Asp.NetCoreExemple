@using EntityLayer.Concreate
@model About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    textarea.form-control {
        height: 250px;
        width: 750px;
    }
</style>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<div class="col-xl-8 order-xl-1">
    <div class="card">
        <form action="Index" class="form-group" method="post">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Hakkımda</h3>
                    </div>
                    <div class="col-4 text-right">
                        <button type="submit" class="btn btn-sm btn-primary">Güncelle</button>
                    </div>
                </div>
            </div>
            <input name="AboutID" value="@Model.AboutID" type="hidden" />
            <div class="card-body">
                <h6 class="heading-small text-muted mb-2">Hakkımda</h6>
                <div class="pl-lg-2">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Title">Başlık</label>
                                <input type="text" name="Title" maxlength="700" class="form-control" placeholder="Başlık" required value="@Model.Title">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Description">Açıklama</label>
                                <textarea name="Description" maxlength="2000" class="form-control" placeholder="Açıklama" required>@Model.Description</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Age">Yaş</label>
                                <input type="number" name="Age" maxlength="7" class="form-control" placeholder="Yaş" required value="@Model.Age">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Mail">E-Mail Adresi</label>
                                <input type="email" name="Mail" maxlength="20" class="form-control" placeholder="E-Mail" required value="@Model.Mail">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Phone">İletişim Numarası</label>
                                <input type="tel" name="Phone" maxlength="20" class="form-control" placeholder="0(5)" required value="@Model.Phone">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="Address">Adres</label>
                                <textarea name="Address" maxlength="2000" class="form-control" placeholder="Adres" required>@Model.Address</textarea>
                            </div>
                        </div>
                    </div>
        </form>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="form-control-label" for="ImageUrl">Fotoğraf</label>
                    <br />
                    <img style="width:250px ; height:250px ; border-radius:10px" src="~/Template/images/userımage/@Model.ImageUrl" />
                    <br />
                    <form action="UploadFile" method="post" enctype="multipart/form-data">
                        <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100">
                        </div>
                        <br />
                        <input type="file" name="ImageUrl" maxlength="20" class="form-control" accept="image/png, image/gif, image/jpeg" required">
                        <br>
                        <input name="AboutID" value="@Model.AboutID" type="hidden" />
                        <input type="submit" style="background-color:pink ; border-radius:15px" value="Fotoğraf Yükle" name="submit">
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
    </div>
</div>
